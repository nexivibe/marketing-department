<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ape.marketingdepartment.controller.StartupController">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40"/>
            </padding>

            <Label text="Marketing Department" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
            <Label text="Project Management" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>

            <VBox spacing="10" alignment="CENTER">
                <padding>
                    <Insets top="20"/>
                </padding>

                <Button fx:id="lastProjectButton"
                        text="Open Last Project"
                        onAction="#onLastProjectClick"
                        prefWidth="250"
                        style="-fx-font-size: 14px;"/>
            </VBox>

            <VBox spacing="10" alignment="CENTER">
                <padding>
                    <Insets top="10"/>
                </padding>

                <Label text="Recent Projects" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                <ListView fx:id="recentProjectsList" prefHeight="150" prefWidth="400"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER">
                <padding>
                    <Insets top="20"/>
                </padding>

                <Button fx:id="openProjectButton"
                        text="Open Project..."
                        onAction="#onOpenProjectClick"
                        prefWidth="150"/>

                <Button fx:id="createProjectButton"
                        text="Create New Project"
                        onAction="#onCreateProjectClick"
                        prefWidth="150"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
