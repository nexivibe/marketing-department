<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ape.marketingdepartment.controller.PipelineEditorDialogController"
      spacing="15" prefWidth="650" prefHeight="550">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>

    <Label text="Pipeline Editor" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Pipeline Name:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="pipelineNameField" prefWidth="300" promptText="Default Pipeline"/>
    </HBox>

    <Separator/>

    <!-- Stages List -->
    <VBox spacing="8" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Pipeline Stages:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <MenuButton text="Add Stage">
                <items>
                    <MenuItem text="Web Export" onAction="#onAddWebExport"/>
                    <MenuItem text="URL Verify" onAction="#onAddUrlVerify"/>
                    <SeparatorMenuItem/>
                    <Menu text="Social Post (GetLate)">
                        <items>
                            <MenuItem text="Any Profile..." onAction="#onAddGetLate"/>
                            <SeparatorMenuItem/>
                            <MenuItem text="X/Twitter" onAction="#onAddTwitter"/>
                            <MenuItem text="LinkedIn" onAction="#onAddLinkedIn"/>
                            <MenuItem text="Bluesky" onAction="#onAddBluesky"/>
                            <MenuItem text="Threads" onAction="#onAddThreads"/>
                            <MenuItem text="Facebook" onAction="#onAddFacebook"/>
                            <MenuItem text="Instagram" onAction="#onAddInstagram"/>
                            <MenuItem text="Reddit" onAction="#onAddReddit"/>
                        </items>
                    </Menu>
                    <SeparatorMenuItem/>
                    <MenuItem text="Dev.to Article" onAction="#onAddDevTo"/>
                    <MenuItem text="Hacker News Export" onAction="#onAddHackerNewsExport"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Facebook Copy Pasta" onAction="#onAddFacebookCopyPasta"/>
                </items>
            </MenuButton>
        </HBox>

        <ListView fx:id="stagesListView" VBox.vgrow="ALWAYS"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Move Up" onAction="#onMoveUp"/>
            <Button text="Move Down" onAction="#onMoveDown"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="editStageButton" text="Edit Stage" onAction="#onEditStage"/>
            <Button text="Remove Stage" onAction="#onRemoveStage" style="-fx-text-fill: #c0392b;"/>
        </HBox>
    </VBox>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="App Settings" onAction="#onOpenSettings" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: #666;" HBox.hgrow="ALWAYS"/>
        <Button text="Save" onAction="#onSave" style="-fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
