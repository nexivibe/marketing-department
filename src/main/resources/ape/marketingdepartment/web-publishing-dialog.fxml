<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ape.marketingdepartment.controller.WebPublishingDialogController"
      spacing="12" prefWidth="750" prefHeight="650">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>

    <Label fx:id="titleLabel" text="Web Publishing" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- Platform Status Checkboxes -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Platform Status:" style="-fx-font-weight: bold;"/>
        <CheckBox fx:id="linkedinCheckBox" text="LinkedIn" disable="true"/>
        <CheckBox fx:id="twitterCheckBox" text="X/Twitter" disable="true"/>
        <CheckBox fx:id="webCheckBox" text="Web" disable="true"/>
    </HBox>

    <Separator/>

    <!-- URI Configuration -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="URI:" prefWidth="60" style="-fx-font-weight: bold;"/>
        <TextField fx:id="uriField" HBox.hgrow="ALWAYS" promptText="my-post-title.html"/>
        <Button fx:id="suggestUriButton" text="AI Suggest" onAction="#onSuggestUri"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
    </HBox>

    <!-- Tags Summary -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Tags:" prefWidth="60" style="-fx-font-weight: bold;"/>
        <Label fx:id="tagsLabel" text="No tags" style="-fx-text-fill: #666;"/>
        <Button text="Edit Tags" onAction="#onEditTags"/>
    </HBox>

    <Separator/>

    <!-- Preview -->
    <VBox spacing="5" VBox.vgrow="ALWAYS">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Preview:" style="-fx-font-weight: bold;"/>
            <Button text="Refresh Preview" onAction="#onRefreshPreview"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Edit Template" onAction="#onEditTemplate"/>
        </HBox>
        <WebView fx:id="previewWebView" VBox.vgrow="ALWAYS"/>
    </VBox>

    <Label fx:id="statusLabel" text="" style="-fx-font-size: 11px;"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="exportPathLabel" text="" style="-fx-font-size: 10px; -fx-text-fill: #888;" HBox.hgrow="ALWAYS"/>
        <Button fx:id="exportButton" text="Export HTML" onAction="#onExport"
                style="-fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Close" onAction="#onClose"/>
    </HBox>
</VBox>
