<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ape.marketingdepartment.controller.PipelineExecutionController"
      spacing="12" prefWidth="800" prefHeight="700">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>

    <Label fx:id="titleLabel" text="Publishing Pipeline" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Separator/>

    <!-- Gatekeeper Stages Section (Collapsible) -->
    <TitledPane fx:id="gatekeeperPane" animated="false">
        <graphic>
            <Label fx:id="gatekeeperTitleLabel" text="Gatekeeper Stages" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        </graphic>
        <VBox fx:id="gatekeeperStagesBox" spacing="6" style="-fx-padding: 8;">
            <!-- Dynamic stage cards will be added here -->
        </VBox>
    </TitledPane>

    <!-- Social Publishing Section (Collapsible) -->
    <TitledPane fx:id="socialPane" animated="false" VBox.vgrow="ALWAYS">
        <graphic>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="socialTitleLabel" text="Social Publishing" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label fx:id="socialProgressLabel" text="" style="-fx-font-size: 12px;"/>
            </HBox>
        </graphic>
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox fx:id="socialStagesBox" spacing="6" style="-fx-padding: 8;">
                <!-- Dynamic social stage cards will be added here -->
            </VBox>
        </ScrollPane>
    </TitledPane>

    <Separator/>

    <!-- Transform Preview -->
    <VBox spacing="5" VBox.vgrow="SOMETIMES" prefHeight="240">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Transform Preview:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="previewStageCombo" promptText="Select stage to preview" prefWidth="250"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="saveTransformButton" text="Save Edits" onAction="#onSaveTransform"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;" disable="true"/>
            <Button text="Regenerate" onAction="#onRegenerateTransform"/>
        </HBox>
        <TextArea fx:id="transformPreviewArea" wrapText="true" VBox.vgrow="ALWAYS"
                  promptText="Transform preview will appear here..."/>
    </VBox>

    <Separator/>

    <!-- Publishing Log Section -->
    <VBox spacing="5" VBox.vgrow="SOMETIMES" prefHeight="150">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Publishing Log:" style="-fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="timerLabel" text="" style="-fx-font-family: monospace; -fx-font-size: 12px; -fx-text-fill: #666;"/>
            <ProgressIndicator fx:id="progressIndicator" prefWidth="20" prefHeight="20" visible="false"/>
            <Button fx:id="clearLogButton" text="Clear" onAction="#onClearLog" style="-fx-font-size: 11px;"/>
        </HBox>
        <TextArea fx:id="logArea" wrapText="true" editable="false" VBox.vgrow="ALWAYS"
                  style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 11px;"
                  promptText="Publishing activity will be logged here..."/>
    </VBox>

    <Separator/>

    <!-- Status and Actions -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="statusLabel" text="" style="-fx-font-size: 11px;" HBox.hgrow="ALWAYS"/>
        <Button text="Edit Pipeline" onAction="#onEditPipeline"/>
        <Button text="Close" onAction="#onClose"/>
    </HBox>
</VBox>
