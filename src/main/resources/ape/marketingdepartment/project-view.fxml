<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ape.marketingdepartment.controller.ProjectController">

    <top>
        <VBox>
            <ToolBar>
                <Button text="Close Project" onAction="#onCloseProject"/>
                <Button text="New Post" onAction="#onNewPost"/>
                <Button text="Refresh" onAction="#onRefreshPosts"/>
                <Separator orientation="VERTICAL"/>
                <Button text="Project Settings" onAction="#onProjectSettings"/>
                <Button text="Edit Pipeline" onAction="#onEditPipeline"/>
                <Button text="App Settings" onAction="#onAppSettings"/>
            </ToolBar>
            <Label fx:id="projectTitleLabel"
                   text="Project Title"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10 15;">
            </Label>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.35">
            <VBox>
                <padding>
                    <Insets bottom="10" left="10" right="5" top="10"/>
                </padding>
                <Label text="Posts" style="-fx-font-weight: bold; -fx-padding: 0 0 5 0;"/>
                <ListView fx:id="postsListView" VBox.vgrow="ALWAYS"/>

                <!-- Post metadata (compact single row) -->
                <HBox fx:id="postMetadataBox" spacing="8" alignment="CENTER_LEFT" visible="false" managed="false">
                    <padding>
                        <Insets top="8"/>
                    </padding>
                    <DatePicker fx:id="postDatePicker" prefWidth="120" onAction="#onPostDateChanged"/>
                    <TextField fx:id="postAuthorField" prefWidth="120" promptText="Author" onAction="#onPostAuthorChanged"/>
                    <Label fx:id="readTimeLabel" text="" style="-fx-text-fill: #666; -fx-font-size: 11px;"/>
                </HBox>

                <!-- Status action buttons (compact) -->
                <HBox fx:id="statusButtonsBox" spacing="4" alignment="CENTER" visible="false" managed="false">
                    <padding>
                        <Insets top="4"/>
                    </padding>
                    <Button fx:id="rewriteButton" text="Rewrite" onAction="#onRewritePost" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 11px;"/>
                    <Button fx:id="sendToReviewButton" text="To Review" onAction="#onSendToReview" style="-fx-font-size: 11px;"/>
                    <Button fx:id="markFinishedButton" text="Finish" onAction="#onMarkFinished" style="-fx-font-size: 11px;"/>
                    <Button fx:id="reRequestReviewButton" text="Re-review" onAction="#onReRequestReview" style="-fx-font-size: 11px;"/>
                    <Button fx:id="reopenButton" text="Re-open" onAction="#onReopenPost" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 11px;"/>
                </HBox>
            </VBox>

            <VBox VBox.vgrow="ALWAYS">
                <!-- Content area: post preview and review side by side -->
                <SplitPane fx:id="contentSplitPane" orientation="HORIZONTAL" dividerPositions="0.5" VBox.vgrow="ALWAYS">
                    <!-- Post Preview Pane -->
                    <VBox>
                        <padding>
                            <Insets bottom="5" left="5" right="5" top="10"/>
                        </padding>
                        <!-- Header with title and action buttons -->
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Post Content" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <HBox fx:id="transformButtonsBox" spacing="8" alignment="CENTER_RIGHT" visible="false" managed="false">
                                <Button text="Edit Meta" onAction="#onEditMeta" style="-fx-font-size: 11px;"/>
                                <Button text="Publish" onAction="#onPublish"
                                        style="-fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
                            </HBox>
                        </HBox>
                        <StackPane VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets top="5"/>
                            </padding>
                            <WebView fx:id="markdownPreview"/>
                            <Label fx:id="previewPlaceholder"
                                   text="Select a post to preview"
                                   style="-fx-text-fill: #888; -fx-font-size: 14px;"/>
                        </StackPane>
                    </VBox>

                    <!-- Review Feedback Pane (hidden when no review) -->
                    <VBox fx:id="reviewPanelContainer" visible="false" managed="false">
                        <padding>
                            <Insets bottom="5" left="5" right="10" top="10"/>
                        </padding>
                        <Label text="AI Review Feedback" style="-fx-font-weight: bold; -fx-text-fill: #e67e22; -fx-padding: 0 0 5 0;"/>
                        <WebView fx:id="reviewWebView" VBox.vgrow="ALWAYS"/>
                    </VBox>
                </SplitPane>
            </VBox>
        </SplitPane>
    </center>

    <!-- AI Status Bar at the bottom -->
    <bottom>
        <HBox fx:id="aiStatusBarContainer" alignment="CENTER_LEFT" spacing="8" minHeight="30"
              style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-border-width: 1 0 0 0;">
        </HBox>
    </bottom>
</BorderPane>
