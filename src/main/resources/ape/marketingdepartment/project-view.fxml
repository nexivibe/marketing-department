<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ape.marketingdepartment.controller.ProjectController">

    <top>
        <VBox>
            <ToolBar>
                <Button text="Close Project" onAction="#onCloseProject"/>
                <Button text="New Post" onAction="#onNewPost"/>
                <Button text="Refresh" onAction="#onRefreshPosts"/>
                <Separator orientation="VERTICAL"/>
                <Button fx:id="settingsToggleButton" text="Project Settings" onAction="#onToggleSettings"/>
                <Button text="App Settings" onAction="#onAppSettings"/>
            </ToolBar>
            <Label fx:id="projectTitleLabel"
                   text="Project Title"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10 15;">
            </Label>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.35">
            <VBox>
                <padding>
                    <Insets bottom="10" left="10" right="5" top="10"/>
                </padding>
                <Label text="Posts" style="-fx-font-weight: bold; -fx-padding: 0 0 5 0;"/>
                <ListView fx:id="postsListView" VBox.vgrow="ALWAYS"/>

                <!-- Status action buttons -->
                <HBox fx:id="statusButtonsBox" spacing="5" alignment="CENTER" visible="false" managed="false">
                    <padding>
                        <Insets top="10"/>
                    </padding>
                    <Button fx:id="sendToReviewButton" text="Send to Review" onAction="#onSendToReview"/>
                    <Button fx:id="markFinishedButton" text="Mark Finished" onAction="#onMarkFinished"/>
                    <Button fx:id="reRequestReviewButton" text="Re-request Review" onAction="#onReRequestReview"/>
                </HBox>
            </VBox>

            <VBox VBox.vgrow="ALWAYS">
                <!-- Preview area -->
                <StackPane VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="5" left="5" right="10" top="10"/>
                    </padding>
                    <WebView fx:id="markdownPreview"/>
                    <Label fx:id="previewPlaceholder"
                           text="Select a draft post to preview"
                           style="-fx-text-fill: #888; -fx-font-size: 14px;"/>
                </StackPane>

                <!-- Review panel area -->
                <VBox fx:id="reviewPanelContainer" visible="false" managed="false" prefHeight="200">
                    <padding>
                        <Insets bottom="10" left="5" right="10" top="5"/>
                    </padding>
                    <Label text="Review Feedback" style="-fx-font-weight: bold; -fx-padding: 0 0 5 0;"/>
                    <WebView fx:id="reviewWebView" VBox.vgrow="ALWAYS"/>
                </VBox>

                <!-- Transform buttons -->
                <HBox fx:id="transformButtonsBox" spacing="10" alignment="CENTER" visible="false" managed="false">
                    <padding>
                        <Insets top="5" bottom="5"/>
                    </padding>
                    <Button text="Transform for LinkedIn" onAction="#onTransformLinkedIn"/>
                    <Button text="Transform for X" onAction="#onTransformTwitter"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <!-- Collapsible settings panel at the bottom -->
    <bottom>
        <TitledPane fx:id="settingsPane" text="Project Settings" expanded="false" animated="true" visible="false" managed="false">
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="AI Agent:" prefWidth="100"/>
                    <ComboBox fx:id="agentComboBox" prefWidth="150"/>
                </HBox>

                <VBox spacing="5">
                    <Label text="Reviewer Prompt:"/>
                    <TextArea fx:id="reviewerPromptArea" prefRowCount="3" wrapText="true"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="LinkedIn Transform Prompt:"/>
                    <TextArea fx:id="linkedinPromptArea" prefRowCount="2" wrapText="true"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Twitter/X Transform Prompt:"/>
                    <TextArea fx:id="twitterPromptArea" prefRowCount="2" wrapText="true"/>
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <Button text="Save Settings" onAction="#onSaveProjectSettings"/>
                </HBox>
            </VBox>
        </TitledPane>
    </bottom>
</BorderPane>
