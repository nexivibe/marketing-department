<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ape.marketingdepartment.controller.ProjectSettingsDialogController"
      spacing="10" prefWidth="600" prefHeight="550">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>

    <TabPane VBox.vgrow="ALWAYS">
        <!-- General Tab -->
        <Tab text="General" closable="false">
            <VBox spacing="15">
                <padding>
                    <Insets bottom="15" left="10" right="15" top="15"/>
                </padding>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="AI Agent:" prefWidth="120" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="agentComboBox" prefWidth="200"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Default Author:" prefWidth="120" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="defaultAuthorField" prefWidth="300" promptText="Enter default author name"/>
                </HBox>

                <Separator/>

                <VBox spacing="5">
                    <Label text="Reviewer Prompt:" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="reviewerPromptArea" prefRowCount="4" wrapText="true"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Rewrite Prompt:" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="rewritePromptArea" prefRowCount="4" wrapText="true"/>
                </VBox>
            </VBox>
        </Tab>

        <!-- Web Publishing Tab -->
        <Tab text="Web Publishing" closable="false">
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="12">
                    <padding>
                        <Insets bottom="15" left="10" right="15" top="15"/>
                    </padding>

                    <VBox spacing="3">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="URL Base:" prefWidth="120" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="urlBaseField" HBox.hgrow="ALWAYS" promptText="https://example.com/blog/"/>
                        </HBox>
                        <HBox>
                            <Label prefWidth="120"/>
                            <Label text="Base URL for published posts (must end with /)" style="-fx-font-size: 10px; -fx-text-fill: #888;"/>
                        </HBox>
                    </VBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Export Directory:" prefWidth="120" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="webExportDirField" HBox.hgrow="ALWAYS" promptText="./public"/>
                        <Button text="Browse" onAction="#onBrowseExportDir"/>
                    </HBox>

                    <Separator/>
                    <Label text="Templates" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Post Template:" prefWidth="120"/>
                        <TextField fx:id="postTemplateField" HBox.hgrow="ALWAYS" promptText="post-template.html"/>
                        <Button text="Browse" onAction="#onBrowseTemplate"/>
                        <Button text="Edit" onAction="#onEditTemplate" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Tag Index:" prefWidth="120"/>
                        <TextField fx:id="tagIndexTemplateField" HBox.hgrow="ALWAYS" promptText="tag-index-template.html"/>
                        <Button text="Browse" onAction="#onBrowseTagIndexTemplate"/>
                        <Button text="Edit" onAction="#onEditTagIndexTemplate" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Listing Template:" prefWidth="120"/>
                        <TextField fx:id="listingTemplateField" HBox.hgrow="ALWAYS" promptText="listing-template.html"/>
                        <Button text="Browse" onAction="#onBrowseListingTemplate"/>
                        <Button text="Edit" onAction="#onEditListingTemplate" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    </HBox>

                    <Separator/>
                    <Label text="Listing Pages" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>

                    <VBox spacing="3">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Output Pattern:" prefWidth="120"/>
                            <TextField fx:id="listingOutputPatternField" prefWidth="120" promptText="blog-"/>
                            <Label text=".html" style="-fx-text-fill: #666;"/>
                            <Label text="(e.g., blog-1.html, blog-2.html)" style="-fx-font-size: 10px; -fx-text-fill: #888;"/>
                        </HBox>
                    </VBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Posts Per Page:" prefWidth="120"/>
                        <Spinner fx:id="postsPerPageSpinner" prefWidth="80"/>
                    </HBox>

                </VBox>
            </ScrollPane>
        </Tab>

        <!-- AI Prompts Tab -->
        <Tab text="AI Prompts" closable="false">
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="15">
                    <padding>
                        <Insets bottom="15" left="10" right="15" top="15"/>
                    </padding>

                    <Label text="These prompts guide AI when generating suggestions for your posts."
                           style="-fx-font-size: 11px; -fx-text-fill: #666; -fx-font-style: italic;" wrapText="true"/>

                    <VBox spacing="5">
                        <Label text="User Profile (Identity Context):" style="-fx-font-weight: bold;"/>
                        <TextArea fx:id="userProfileArea" prefRowCount="4" wrapText="true"
                                  promptText="Describe your identity, brand voice, or context that should be included in all AI-generated content transformations. Leave blank if not needed."/>
                        <Label text="This text is prepended to all pipeline transformation prompts to maintain consistent identity and voice."
                               style="-fx-font-size: 10px; -fx-text-fill: #888;" wrapText="true"/>
                    </VBox>

                    <Separator/>

                    <VBox spacing="5">
                        <Label text="Tag Suggestion Prompt:" style="-fx-font-weight: bold;"/>
                        <TextArea fx:id="tagSuggestionPromptArea" prefRowCount="3" wrapText="true"
                                  promptText="Prompt for AI to suggest SEO-optimized tags"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="URI Suggestion Prompt:" style="-fx-font-weight: bold;"/>
                        <TextArea fx:id="uriSuggestionPromptArea" prefRowCount="3" wrapText="true"
                                  promptText="Prompt for AI to suggest SEO-friendly URL slugs"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="SEO Description Prompt:" style="-fx-font-weight: bold;"/>
                        <TextArea fx:id="descriptionSuggestionPromptArea" prefRowCount="3" wrapText="true"
                                  promptText="Prompt for AI to generate SEO meta descriptions"/>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- Logging Tab -->
        <Tab text="Logging" closable="false">
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="15">
                    <padding>
                        <Insets bottom="15" left="10" right="15" top="15"/>
                    </padding>

                    <Label text="Configure logging for debugging and auditing. Log files are stored in the project root."
                           style="-fx-font-size: 11px; -fx-text-fill: #666; -fx-font-style: italic;" wrapText="true"/>

                    <Separator/>

                    <!-- AI Logging -->
                    <VBox spacing="5">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <CheckBox fx:id="aiLoggingCheckbox" text="AI Interactions (ai.log)"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="aiLogSizeLabel" text="" style="-fx-font-size: 10px; -fx-text-fill: #888;"/>
                            <Button text="View" onAction="#onViewAiLog" style="-fx-font-size: 11px;"/>
                            <Button text="Clear" onAction="#onClearAiLog" style="-fx-font-size: 11px;"/>
                        </HBox>
                        <Label text="Logs all AI prompts, responses, and interactions"
                               style="-fx-font-size: 10px; -fx-text-fill: #888; -fx-padding: 0 0 0 24;"/>
                    </VBox>

                    <!-- API Logging -->
                    <VBox spacing="5">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <CheckBox fx:id="apiLoggingCheckbox" text="Network Transactions (api.log)"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="apiLogSizeLabel" text="" style="-fx-font-size: 10px; -fx-text-fill: #888;"/>
                            <Button text="View" onAction="#onViewApiLog" style="-fx-font-size: 11px;"/>
                            <Button text="Clear" onAction="#onClearApiLog" style="-fx-font-size: 11px;"/>
                        </HBox>
                        <Label text="Logs all HTTP requests and responses to external services"
                               style="-fx-font-size: 10px; -fx-text-fill: #888; -fx-padding: 0 0 0 24;"/>
                    </VBox>

                    <!-- Holistic Logging -->
                    <VBox spacing="5">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <CheckBox fx:id="holisticLoggingCheckbox" text="Human Activity (holistic.log)"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="holisticLogSizeLabel" text="" style="-fx-font-size: 10px; -fx-text-fill: #888;"/>
                            <Button text="View" onAction="#onViewHolisticLog" style="-fx-font-size: 11px;"/>
                            <Button text="Clear" onAction="#onClearHolisticLog" style="-fx-font-size: 11px;"/>
                        </HBox>
                        <Label text="Logs user actions and decisions at a high level for workflow analysis"
                               style="-fx-font-size: 10px; -fx-text-fill: #888; -fx-padding: 0 0 0 24;"/>
                    </VBox>

                    <Separator/>

                    <!-- Git Ignore Section -->
                    <Label text=".gitignore Management" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>

                    <VBox spacing="8">
                        <Label text="Exclude log files from version control to keep sensitive data out of Git."
                               style="-fx-font-size: 11px; -fx-text-fill: #666;" wrapText="true"/>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="gitignoreStatusLabel" text="" style="-fx-font-size: 11px;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="initGitignoreButton" text="Initialize .gitignore" onAction="#onInitGitignore"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                            <Button text="Edit .gitignore" onAction="#onEditGitignore" style="-fx-font-size: 11px;"/>
                        </HBox>

                        <VBox fx:id="gitignoreEntriesBox" spacing="5" style="-fx-padding: 10; -fx-background-color: #f8f8f8; -fx-background-radius: 4;">
                            <CheckBox fx:id="ignoreAiLogCheckbox" text="Ignore ai.log"/>
                            <CheckBox fx:id="ignoreApiLogCheckbox" text="Ignore api.log"/>
                            <CheckBox fx:id="ignoreHolisticLogCheckbox" text="Ignore holistic.log"/>
                        </VBox>
                    </VBox>

                </VBox>
            </ScrollPane>
        </Tab>
    </TabPane>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" prefWidth="80"/>
        <Button fx:id="saveButton" text="Save" prefWidth="80" style="-fx-font-weight: bold;"/>
    </HBox>
</VBox>
