<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ape.marketingdepartment.controller.TagEditorPopupController"
      spacing="10" prefWidth="400" prefHeight="400">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>

    <Label fx:id="titleLabel" text="Edit Tags" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <ListView fx:id="tagsListView" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="newTagField" HBox.hgrow="ALWAYS" promptText="Enter new tag" onAction="#onAddTag"/>
        <Button text="Add" onAction="#onAddTag"/>
        <Button text="Remove" onAction="#onRemoveTag"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="suggestTagsButton" text="AI Suggest Tags" onAction="#onSuggestTags"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="statusLabel" text="" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Save" onAction="#onSave" style="-fx-font-weight: bold;"/>
    </HBox>
</VBox>
