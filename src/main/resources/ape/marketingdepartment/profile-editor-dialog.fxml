<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ape.marketingdepartment.controller.ProfileEditorDialogController"
      spacing="15" prefWidth="600" prefHeight="500">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>

    <Label text="Publishing Profiles" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Separator/>

    <!-- Profiles List -->
    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <VBox spacing="8" prefWidth="220">
            <Label text="Profiles:" style="-fx-font-weight: bold;"/>
            <ListView fx:id="profilesListView" VBox.vgrow="ALWAYS"/>
            <HBox spacing="5">
                <Button text="Add" onAction="#onAddProfile" prefWidth="70"/>
                <Button text="Remove" onAction="#onRemoveProfile" prefWidth="70" style="-fx-text-fill: #c0392b;"/>
            </HBox>
        </VBox>

        <!-- Profile Details -->
        <VBox fx:id="detailsPane" spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Profile Details:" style="-fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Platform:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="platformCombo" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Auth Method:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="authMethodCombo" prefWidth="250" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Browser Profile:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <TextField fx:id="browserProfileField" HBox.hgrow="ALWAYS"/>
                    <Button text="Browse" onAction="#onBrowseBrowserProfile"/>
                </HBox>
            </GridPane>

            <Separator/>

            <Label text="Settings:" style="-fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="includeUrlCheckBox" text="Include verified URL in posts"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="URL Placement:"/>
                <ComboBox fx:id="urlPlacementCombo" prefWidth="150"/>
            </HBox>

            <Region VBox.vgrow="ALWAYS"/>

            <Button text="Apply Changes" onAction="#onApplyChanges"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </VBox>
    </HBox>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: #666;" HBox.hgrow="ALWAYS"/>
        <Button text="Close" onAction="#onClose"/>
    </HBox>
</VBox>
