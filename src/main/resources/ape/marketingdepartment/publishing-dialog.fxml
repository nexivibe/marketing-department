<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ape.marketingdepartment.controller.PublishingDialogController"
      spacing="15" prefWidth="500" prefHeight="400">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>

    <Label fx:id="platformLabel" text="Transform for Platform" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <VBox spacing="5" VBox.vgrow="ALWAYS">
        <Label text="Transformed Content:"/>
        <TextArea fx:id="transformedTextArea" wrapText="true" VBox.vgrow="ALWAYS"
                  promptText="Transformed content will appear here..."/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Publishing Profile:"/>
        <ComboBox fx:id="profileComboBox" prefWidth="250"/>
    </HBox>

    <Label fx:id="statusLabel" text="" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="regenerateButton" text="Regenerate" onAction="#onRegenerate"/>
        <Button fx:id="approveButton" text="Approve" onAction="#onApprove"/>
        <Button fx:id="postButton" text="Post" onAction="#onPost" style="-fx-font-weight: bold;"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
